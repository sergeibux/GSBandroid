<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.bonaparte.gsb.suividevosfrais">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_search_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/my_backup_rules">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="recipe-app.com"
                    android:pathPrefix="/recipes" />
            </intent-filter>
        </activity>
        <activity android:name=".HfActivity" />
        <activity android:name=".HfRecapActivity" />
        <activity android:name=".KmActivity" />
        <activity android:name=".NuiActivity" />
        <activity android:name=".EtpActivity" />
        <activity android:name=".RepActivity" />
        <activity android:name=".LogActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>